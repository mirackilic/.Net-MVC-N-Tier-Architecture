@model Cart
@{
    ViewBag.Title = "CartPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-hover">
    <thead>
        <tr>
            <th>Ürün İsmi</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Adedi</th>
            <th>Ürün AraFiyatı</th>
            <th>@Html.ActionLink("Alısverişe devam","ShoppingList")</th>
        </tr>
    </thead>

    @{ 
        decimal? toplamTutar = 0;
    }


    <tbody>
        @foreach (CartItem item in Model.Sepetim)
        {
            toplamTutar += item.SubTotal;
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Amount</td>
                <td>@item.SubTotal</td>
                <td>@Html.ActionLink("Sepetten Cıkar","RemoveFromCart", new {id=item.ID })</td>
            </tr>
        }
    </tbody>
</table>


<div>
    Odemeniz gereken toplam tuar=> @toplamTutar
</div>

<div>
    @Html.ActionLink("Sipariş Ver", "SiparisVer", null, new {@class="btn btn-primary" })
</div>