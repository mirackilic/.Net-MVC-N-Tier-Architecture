@model Tuple<Product,List<Category>>
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-9">
    @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            Ürün İsmi Giriniz
        </div>
        <div>
            @Html.TextBoxFor(x => x.Item1.ProductName, new { @class = "form-control" })
        </div>
        <div>
            Ürün Fiyat
        </div>
        <div>
            @Html.TextBoxFor(x => x.Item1.UnitPrice, new { @class = "form-control" })
        </div>

        <div>
            Ürün Stok
        </div>
        <div>
            @Html.TextBoxFor(x => x.Item1.UnitsInStock, new { @class = "form-control" })
        </div>

        <div>
            Ürün Resmini Seciniz


        </div>

        <div>
            <input type="file" name="resim" />
        </div>



        <div>
            <button class="btn btn-primary"> Ekle </button>
        </div>
    }


</div>
