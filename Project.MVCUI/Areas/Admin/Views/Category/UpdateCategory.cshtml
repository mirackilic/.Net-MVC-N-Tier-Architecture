@model Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdateCategory</h2>

<div class="col-md-9">
    @using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
    {
        @Html.HiddenFor(x=>x.ID)
        <div>
            Kategori İsmi Güncelleyiniz
        </div>
        <div>
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        </div>
        <div>
            Acıklamayı Güncelleyiniz
        </div>
        <div>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        </div>
        <div>
            <button class="btn btn-primary"> Güncelle </button>
        </div>
    }


</div>